    crossorigin="anonymous" referrerpolicy="no-referrer"/> 

  <style>
    body { margin:0; padding:0; font-family: Arial, Helvetica, sans-serif; font-size:1.2rem; background:#333; color:#fff; }
    h1,h2,h3,h4,h6,p { text-align:center; }
    #dashboard-content { margin:2rem auto; max-width:600px; padding:1rem; background:#444; border-radius:8px; }
    button { display:block; margin:1rem auto; padding:0.5rem 1rem; font:inherit; color:#fff; background:orange; border:none; border-radius:5px; cursor:pointer; }
    footer { margin-top:3rem; text-align:center; }
  </style>
</head>

<body> 
  <div id="dashboard-content">Loading User info/profile...</div>
  
  <button id="logout-btn">Log out</button> 
    
  <h1>Welcome to Your Dashboard</h1> 
  <p>You're now securely logged in.</p>

  <h2>How can I help you?</h2>
  <h3>You are about to make an order of IdyllAc card.<br>
      To do that: Provide your Personal Information and queries:<br>
      Fill the form, upload documents, take selfie, and send.</h3>

  <p><a href="/submit/personal_info" class="btn">Continue to Personal Info Form</a></p>

  <footer>
    <h4><span class="nowrap">&copy;<time id="year"></time> IdyllAc</span></h4>
  </footer> 


  <script>
    // ‚úÖ Refresh access token using cookie refreshToken
    async function refreshAccessToken() {
      try {
        const res = await fetch('/api/auth/refresh-token', {
          method: 'POST',
          credentials: 'include', // üëà send/receive cookies
          });
  
        if (res.ok) throw new Error('Failed to refresh token');
          const data = await res.json();
           console.log('üîë Refreshed access token');
          return data.accessToken; // ‚úÖ only access token comes back in JSON
      } catch (err) {
        console.error('Refresh request failed:', err);
        window.location.href = '/login';
      }
    }
  
    // ‚úÖ Load dashboard info
    async function loadDashboard() {
      try {
      const res = await fetch('/api/auth/dashboard', {
        method: 'GET',
        credentials: 'include', // üëà send cookies
      });

      if (res.status === 401 || res.status === 403) {
        console.log('‚ö†Ô∏è Access expired, refreshing...');
        await refreshAccessToken();
        res = await fetch('/api/auth/dashboard', {
          method: 'GET',
          credentials: 'include'
        });
      }
  
      if (res.ok) {
        const data = await res.json();
        document.getElementById('dashboard-content').innerHTML = `
          <h2>Hello, ${data.user.name}</h2>
          <p>Email: ${data.user.email}</p>
          <p>User ID: ${data.user.id}</p>`;
      } else {
        throw new Error('Failed to load dashboard');
      }
    } catch (err) {
      console.error(err);
      window.location.href = '/login';
    }
   }
  
    // Auto-refresh access token every 14 minutes
    setInterval(refreshAccessToken, 14 * 60 * 1000);

    // Logout
   // public/js/dashboard.js
const logoutBtn = document.getElementById("logout-btn");

if (logoutBtn) {
  logoutBtn.addEventListener("click", async () => {
    try {
      // Try JWT logout first
      let res = await fetch("/api/auth/logout", {
        method: "POST",
        credentials: "include",
      });

      if (res.ok) {
        // Expect JSON with redirect
        const data = await res.json();
        if (data.redirect) {
          window.location.href = data.redirect;
          return;
        }
      }

      // If JWT logout failed, fallback to session logout
      res = await fetch("/logout", { method: "GET", credentials: "include" });

      if (res.redirected) {
        window.location.href = res.url;
      } else {
        window.location.href = "/login"; // fallback
      }
    } catch (err) {
      console.error("Logout error:", err);
      window.location.href = "/login"; // ultimate fallback
    }
  });
}
  </script>
</body>
