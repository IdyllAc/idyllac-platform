<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Forms</title>
  <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
  <script src="https://kit.fontawesome.com/cbdd759dc1.js" crossorigin="anonymous"></script>
  <style>
    body {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, Helvetica, sans-serif;
      font-size: 1.5rem;
      background-image: linear-gradient(#1f7d5f, whitesmoke);
    }
    h1 { color: rgba(168, 227, 250, 0.955) }
    .responsive {
      width: 30%;
      height: auto;
      display: block;
      margin: auto;
      background-color: transparent;
    }
    h2 { text-align: center; color: orange; }
    p { text-align: center; color: #777777; margin-bottom: 3em; }
    input { font: inherit; width: fit-content; }
    html { scroll-behavior: smooth; }
    h5 { color: orange; }
    .container {
      width: 100%;
      height: 70vh;
      background: none;
      display: inline-block;
      align-items: center;
      justify-content: center;
      text-align: center;
    }
    .container form {
      display: block;
      margin: auto;
      width: 420px;
      padding: 10px 30px 20px;
      border-radius: 4px;
      box-shadow: 10px 20px 20px rgba(0, 0, 0, 0.5);
      position: relative;
      background: #1f7d5f;
      color: #fff;
    }
    .fa-paper-plane {
      position: absolute;
      top: 0;
      left: 50%;
      transform: translate(-50%, -50%);
      background: orange;
      color: #1f7d5f;
      font-size: 30px;
      padding: 15px;
      border-radius: 50%;
      box-shadow: 0 0 10px (0, 0, 0, 0.5);
    }
    .input-group {
      width: 100%;
      display: block;
      align-items: center;
      margin: 10px auto 0;
      position: relative;
    }
    .input-group label {
      flex-basis: 20%;
      display: block;
      font-size: 16px;
      color: whitesmoke;
    }
    .input-group input {
      background: transparent;
      border: 0;
      outline: 0;
      padding: 2px 0;
      border-bottom: 1px solid #999;
      color: chartreuse;
      font-size: 16px;
      width: 100%;
    }
    ::placeholder {
      font-size: 16px;
      color: wheat;
    }
    form button {
      background-color: orange;
      color: white;
      border-radius: 4px;
      border: none;
      padding: 10px 40px;
      cursor: pointer;
      display: block;
      margin: auto;
    }
    .input-group span {
      position: absolute;
      bottom: 12px;
      right: 17px;
      font-size: 14px;
      color: red;
    }
    #submit-error { color: red; }
    .btn:hover {
      background-color: #1f7d5f;
      color: white;
    }
    h6 { color: #333; }
    .content .nowrap {
      display: block;
      margin: auto;
      position: sticky;
      bottom: 0;
      padding-bottom: 0.7em;
      font-size: 0.9em;
      color: #1f7d5f;
    }



     .btn {
  display: inline-block;
  padding: 12px 25px;
  margin: 10px;
  font-size: 1rem;
  font-weight: bold;
  text-align: center;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  text-decoration: none;
  border: none;
}

.btn-primary {
  background-color: orange;
  color: white;
}

.btn-primary:hover {
  background-color: #e69500;
}

.btn-secondary {
  background-color: #1f7d5f;
  color: white;
}

.btn-secondary:hover {
  background-color: #145c45;
}

.btn-outline {
  background-color: transparent;
  border: 2px solid orange;
  color: orange;
}

.btn-outline:hover {
  background-color: orange;
  color: white;
}

  </style>
</head>
<body>
  <br><br>
  <div class="container">
    <form id="personal" method="POST" action="/protect/personal_info">
        <i class="fa-regular fa-paper-plane"></i>
        <h2>Personnel Information</h2>
        <h5>Fill & send your form here</h5>


        <div class="genderContainer">
          <label>Gender: </label>
          <input class="gender1" type="radio" name="gender" value="Madame">Madame
          <input class="gender1" type="radio" name="gender" value="Monsieur">Monsieur
        </div>
      
        <div class="input-group">
          <label>
            First name:
            <input type="text" id="firstname" name="first_name" maxlength="100" placeholder="Enter firstname" required>
            <span id="firstname-error"></span>
          </label>
        </div>

        <div class="input-group">
          <label>
            Last name:
            <input type="text" id="lastname" name="last_name" maxlength="100" placeholder="Enter your lastname" required>
            <span id="lastname-error"></span>
          </label>
        </div>
      
        <div class="input-group">
          <label>
            Date of birth:
            <input type="date" id="dateofbirth" name="date_of_birth" maxlength="10" required>
            <span id="dateofbirth-error"></span>
          </label>
        </div>
      
        <div class="input-group">
          <label>
            Phone:
            <input type="tel" id="phone" name="phone" maxlength="20" placeholder="+1(234) 567890" required>
            <span id="phone-error"></span>
          </label>
        </div>

        <div class="input-group">
          <label>
            Nationality:
          <input type="text" id="nationality" name="nationality" placeholder="Enter your nationality" required>
          <span id="nationality-error"></span>
        </label>
        </div>
        
        <div class="input-group">
          <label>
          Occupation:
          <input type="text" id="occupation" name="occupation" placeholder="Enter your occupation" required>
          <span id="occupation-error"></span>
        </label>
        </div>
      
        <br>
        <button type="submit">Submit</button>
        <span id="submit-error"></span>
      
        <h6><small>If everything is done correctly, you should receive a corresponding message.</small></h6>
      </form>
      <div class="form-actions">
        <p><a href="/dashboard" class="btn btn-outline">‚Üê Back</a>
        <button type="submit" class="btn btn-primary">Next ‚Üí Upload Documents</button></p>
         
      </div>
    </div>
    <br><br>
    

    <footer class="content" style="text-align: center; font-size:medium;">
      <span class="nowrap">Copyright &copy; <time id="year">IdyllAc</time></span>
    </footer>
  
      
      <script>
      document.getElementById('personal').addEventListener('submit', async (e) => {
        e.preventDefault();
      
        const form = e.target;
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        try {
        const token = localStorage.getItem('accessToken'); // üîë get JWT from storage
        if (!token) {
      alert("Access token missing. Please log in again.");
      return;
    }

        const response = await fetch('/protect/personal_info', { // üëà match your Express mount
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`, // ‚úÖ if using JWT
          },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (response.ok) {
          alert(result.message); // ‚úÖ success
           // üëá redirect client-side
          window.location.href = '/protect/upload/document'; // üëà redirect to next step
        } else {
          document.getElementById("submit-error").innerText = result.error || "Submission failed.";
        }
      } catch (err) {
        console.error("Error submitting form:", err);
        alert("Something went wrong while submitting your info.");
        }
      });
      </script>
</body>
</html>


